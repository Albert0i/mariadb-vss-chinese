<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Statistics</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body class="bg-gray-50 py-16 px-6 text-center">
  <h1 class="text-3xl font-bold text-gray-700 mb-6">📊 系統統計資訊</h1>

  <div id="meta" class="text-lg text-gray-600 mb-8 space-y-2"></div>

  <div id="results" class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 max-w-5xl mx-auto"></div>

  <a href="/" class="mt-10 inline-block text-blue-500 hover:underline">← 回首頁</a>

  <script>
    async function loadStats() {
      try {
        const res = await fetch('/api/v1/stats');
        const data = await res.json();

        // Version and stats
        const meta = document.getElementById('meta');
        meta.innerHTML = `
          <p>🔧 使用資料庫版本：<strong>${data.version}</strong></p>
          <p>📄 全部文件數：<strong>${data.documents}</strong></p>
          <p>🎯 搜尋命中數：<strong>${data.matched}</strong></p>
        `;

        // Results
        const container = document.getElementById('results');
        container.innerHTML = '';
        data.results.forEach(item => {
          const box = document.createElement('div');
          box.className = 'bg-white shadow-md rounded p-5 text-left';
          box.innerHTML = `
            <p class="text-gray-800 mb-2">💬 ${item.textChi}</p>
            <p class="text-sm text-gray-500">
  🆔 <a href="/details/${item.id}" class="text-blue-500 hover:underline">${item.id}</a> |
  👁️‍🗨️ Visited: ${item.visited}
</p>        
          `;
          container.appendChild(box);
        });

      } catch (error) {
        document.getElementById('meta').textContent = '⚠️ 資料載入失敗。';
      }
    }

    loadStats();
  </script>
</body>
</html>